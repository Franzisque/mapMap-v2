<div id="media-new" class="media-form one-page">

    <%= render partial: 'steps' %>
    <div class="step-info">
        <p>Please select which kind of media you want to share:</p>
    </div>

    <div id="media-step-select">

        <div id="album-select" class="media-select">
            <div class="media-icon"><i class='fa fa-picture-o '></i></div>
            <%= link_to "Images", next_wizard_path( :medium => "Album" ) %>
        </div>

        <div id="link-select" class="media-select">
            <div class="media-icon"><i class='fa fa-youtube-square '></i><i class='fa fa-vimeo-square '></i></div>
            <%= link_to "Youtube/Vimeo", next_wizard_path( :medium => "VideoLink" ) %>
        </div>

        <div id="video-select" class="media-select">
            <div class="media-icon"><i class='fa fa-film '></i></div>
            <%= link_to "Video upload", next_wizard_path( :medium => "VideoUpload" ) %>
        </div>
    </div>
</div>