<div class="media-comment" data-id="<%= comment.id %>">
    <div class="comment-header">
        <div class="comment-user-pic">
            <%= image_tag comment.user.image_url("small"), alt: comment.user.username %>
        </div>
        <%= link_to comment.user.username, profile_path(comment.user.username) %>
        <span class="time"><%= set_time_difference(comment.created_at)%></span>
    </div>

    <div class="comment-body">
        <%= render partial: 'comments/comment_block', locals: {comment: comment} %>
    </div>
</div>